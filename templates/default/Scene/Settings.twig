{% extends "default.twig" %}

{% if scene_form_id == 'cinder_save_form-global' %}
	{% set scene_form_id = '' %}
{% endif %}

{% block scene %}
	<form method="post" id="cinder_save_form-{{ scene_id }}">
		{{ macros.input( "nonce[#{scene_context}]", scene_nonce, 'hidden', input_attrs ) }}
	{% for setting in settings %}
		{{ setting.do_setting( context ) }}
	{% endfor %}
	<div class="cinder-tray cinder-settings-tray js-nojs">

		{{ macros.input( 'action', 'save', 'submit', input_attrs ) }}

	</div>
	</form>
{% endblock %}